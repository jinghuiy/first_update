<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="left"
    android:orientation="vertical"
    android:background="#AD913B"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The GPA Calculator"
        android:padding="24dp"
        android:textSize="34dp"
        android:layout_gravity="center"
        android:textColor="#8411F0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assessment_text"
        android:hint="@string/assessment_string"
        android:inputType="text"
        android:background="#FFF"
        android:layout_margin="2dp"
        android:padding="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/marks_text"
        android:hint="@string/marks_string"
        android:inputType="number"
        android:background="#FFF"
        android:layout_margin="2dp"
        android:padding="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_marks_text"
        android:hint="@string/total_marks_string"
        android:inputType="number"
        android:background="#FFF"
        android:layout_margin="2dp"
        android:padding="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weightage_text"
        android:hint="@string/weightage_string"
        android:inputType="number"
        android:layout_margin="2dp"
        android:background="#FFF"
        android:padding="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_button"
            android:text="Input values"
            android:layout_gravity="center"
            android:padding="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go_button"
            android:text="Calculate"
            android:layout_gravity="center"
            android:padding="10dp" />

    </LinearLayout>

</LinearLayout>